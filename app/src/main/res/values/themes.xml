<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shoppinglist" parent="Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">#00FF36</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">#FDDB00</item>
        <!-- Secondary brand color. -->

        <!-- цвет кнопки new item. -->
        <item name="colorSecondary">@color/white</item>

        <item name="android:windowFullscreen">true</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Shoppinglist.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Shoppinglist.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Shoppinglist.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- мой стиль для добавления или редактирования заметки -->
    <style name="Theme.NewNote" parent="Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">#00FF36</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">#FDDB00</item>
        <!-- Secondary brand color. -->

        <!-- цвет кнопки new item. -->
        <item name="colorSecondary">@color/white</item>
<item name="colorPrimaryVariant">@color/teal_200</item>

        <!-- смена цвета статус бара при редактировании или добавлении заметки -->
        <item name="colorSecondaryVariant">@color/teal_700</item>

        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NewNote.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NewNote.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NewNote.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>